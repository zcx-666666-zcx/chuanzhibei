<!-- pages/register/register.wxml -->
<view class="container">
  <view class="header">
    <image class="logo" src="http://localhost:8001/uploads/login-bg.png.png" mode="aspectFit"></image>
    <text class="title">创建账号</text>
    <text class="subtitle">欢迎加入非遗传承社区</text>
  </view>

  <view class="form-container">
    <view class="input-group">
      <text class="input-label">用户名</text>
      <input class="form-input" placeholder="请输入用户名" bindinput="onUsernameInput" />
    </view>
    
    <view class="input-group">
      <text class="input-label">密码</text>
      <input class="form-input" placeholder="请输入密码" password bindinput="onPasswordInput" />
    </view>
    
    <view class="input-group">
      <text class="input-label">确认密码</text>
      <input class="form-input" placeholder="请再次输入密码" password bindinput="onConfirmPasswordInput" />
    </view>
    
    <view class="input-group">
      <text class="input-label">邮箱（可选）</text>
      <input class="form-input" placeholder="请输入邮箱地址" bindinput="onEmailInput" />
    </view>
    
    <button class="register-btn" bindtap="onRegister">注册</button>
    
    <view class="form-footer">
      <text>已有账号？</text>
      <text class="link" bindtap="goToLogin">立即登录</text>
    </view>
  </view>
  
  <view class="agreement">
    <text>注册即表示您同意</text>
    <text class="link">《用户协议》</text>
    <text>和</text>
    <text class="link">《隐私政策》</text>
  </view>
</view>