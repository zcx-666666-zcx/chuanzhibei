/* index.wxss */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f8f5f2;
}

/* È°∂ÈÉ®ÂØºËà™Ê†èÊ†∑Âºè */
.header {
  position: sticky;
  top: 0;
  z-index: 999;
  background-color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
}

.logo {
  display: flex;
  align-items: center;
}

.logo-img {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
}

.logo-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.header-icons {
  display: flex;
  align-items: center;
}

.icon-btn {
  margin-left: 30rpx;
  background: none;
  border: none;
  padding: 0;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #666;
}

.icon-btn:active {
  color: #c41e3a;
}

/* ‰∏ªÂÜÖÂÆπÂå∫ÂüüÊ†∑Âºè */
.content {
  flex: 1;
  padding: 0 30rpx 160rpx;
}

/* ËΩÆÊí≠ÂõæÊ†∑Âºè */
.swiper {
  height: 400rpx;
  border-radius: 20rpx;
  margin-bottom: 40rpx;
  overflow: hidden;
}

.swiper-img {
  width: 100%;
  height: 100%;
}

.swiper-text {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.7), transparent);
  padding: 40rpx 30rpx 20rpx;
  color: white;
}

.swiper-title {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.swiper-desc {
  font-size: 28rpx;
  display: block;
  opacity: 0.9;
}

/* Âå∫ÂùóÊ†∑Âºè */
.section {
  margin-bottom: 50rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  position: relative;
  padding-bottom: 16rpx;
}

.section-title::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 80rpx;
  height: 6rpx;
  background-color: #c41e3a;
}

.more-link {
  font-size: 28rpx;
  color: #c41e3a;
}

/* Êñ∞ÈóªÂàóË°®Ê†∑Âºè */
.news-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.news-card {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.05);
}

.news-img {
  width: 100%;
  height: 300rpx;
}

.news-content {
  padding: 24rpx;
}

.news-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.news-desc {
  font-size: 26rpx;
  color: #666;
  display: block;
  margin-bottom: 24rpx;
  line-height: 1.5;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.news-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.news-date {
  font-size: 24rpx;
  color: #999;
}

.fav-btn {
  background: none;
  border: none;
  padding: 0;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
}

.fav-btn:active {
  color: #c41e3a;
}

/* Êé®ËçêÈ°πÁõÆÊ†∑Âºè */
.recommend-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 30rpx;
}

.recommend-item {
  text-align: center;
  padding: 20rpx;
}

.recommend-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 16rpx;
}

.recommend-text {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  display: block;
  margin-bottom: 8rpx;
}

.recommend-tag {
  font-size: 20rpx;
  color: #c41e3a;
  background-color: rgba(196, 30, 58, 0.1);
  padding: 4rpx 8rpx;
  border-radius: 6rpx;
}

/* AR‰ΩìÈ™åÊ†∑Âºè */
.ar-section {
  background: linear-gradient(135deg, rgba(196, 30, 58, 0.1), rgba(196, 30, 58, 0.05));
  border-radius: 20rpx;
  padding: 0;
  margin-top: 40rpx;
}

.ar-content {
  padding: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.ar-text {
  flex: 1;
  margin-right: 30rpx;
}

.ar-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.ar-desc {
  font-size: 28rpx;
  color: #666;
  display: block;
  line-height: 1.4;
}

.ar-button {
  display: flex;
  align-items: center;
  gap: 10rpx;
  white-space: nowrap;
}

.ar-button text {
  font-size: 28rpx;
}

/* ÂõæÊ†áÂ≠ó‰ΩìÊ†∑Âºè */
.iconfont {
  font-size: 32rpx;
}

.icon-search::before {
  content: 'üîç';
}

.icon-bell::before {
  content: 'üîî';
}

.icon-heart::before {
  content: '‚ô°';
}

.icon-heart-fill::before {
  content: '‚ô•';
}

.icon-cube::before {
  content: 'üì¶';
}

/* ÂìçÂ∫îÂºèË∞ÉÊï¥ */
@media (max-width: 750rpx) {
  .recommend-grid {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .ar-content {
    flex-direction: column;
    align-items: flex-start;
  }
  
  .ar-text {
    margin-right: 0;
    margin-bottom: 30rpx;
  }
}

/* È™®Êû∂Â±èÊ†∑Âºè */
.skeleton-swiper {
  height: 400rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: loading 1.5s infinite;
  border-radius: 20rpx;
  margin-bottom: 40rpx;
}

.skeleton-recommends {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 30rpx;
}

.skeleton-recommend {
  width: 120rpx;
  height: 160rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: loading 1.5s infinite;
  border-radius: 8rpx;
}

@keyframes loading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

/* ÈîôËØØÂ§ÑÁêÜÊ†∑Âºè */
.error-container {
  height: 400rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #f8f8f8;
  border-radius: 20rpx;
  margin-bottom: 40rpx;
}

.error-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.retry-button {
  background-color: #c41e3a;
  color: white;
  border: none;
  padding: 15rpx 30rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
}