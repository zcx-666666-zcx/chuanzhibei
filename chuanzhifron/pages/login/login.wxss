/* pages/login/login.wxss */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20px;
  box-sizing: border-box;
}

.header {
  text-align: center;
  margin: 40px 0 30px 0;
}

.logo {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  margin: 0 auto 20px;
  display: block;
}

.title {
  font-size: 24px;
  font-weight: bold;
  color: #fff;
  margin-bottom: 10px;
  line-height: 1.3;
  display: block;
  text-align: center;
}

.subtitle {
  font-size: 14px;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.4;
  display: block;
  text-align: center;
}

.form-container {
  background-color: #fff;
  border-radius: 15px;
  padding: 0;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
  overflow: hidden;
}

.tabs {
  display: flex;
  border-bottom: 1px solid #eee;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 15px 0;
  font-size: 16px;
  color: #999;
  position: relative;
}

.tab.active {
  color: #667eea;
  font-weight: bold;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 20%;
  width: 60%;
  height: 3px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 3px;
}

.form-content {
  padding: 25px 20px;
}

.input-group {
  margin-bottom: 20px;
}

.input-label {
  display: block;
  font-size: 14px;
  color: #666;
  margin-bottom: 8px;
  font-weight: 500;
}

.form-input {
  width: 100%;
  height: 45px;
  border: 1px solid #e0e0e0;
  border-radius: 8px;
  padding: 0 15px;
  font-size: 15px;
  box-sizing: border-box;
  transition: border-color 0.3s;
}

.form-input:focus {
  border-color: #667eea;
  outline: none;
}

.login-btn {
  width: 100%;
  height: 45px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 8px;
  font-size: 16px;
  font-weight: bold;
  margin: 15px 0 10px 0;
}

.form-footer {
  display: flex;
  justify-content: space-between;
  margin-top: 15px;
}

.link {
  color: #667eea;
  font-size: 14px;
  cursor: pointer;
}

.wechat-login {
  text-align: center;
  padding: 10px 0;
}

.wechat-info {
  margin: 20px 0 30px 0;
}

.wechat-icon-placeholder {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  background: linear-gradient(135deg, #07c160 0%, #06ad56 100%);
  margin: 0 auto 15px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24px;
  color: white;
  font-weight: bold;
}

.wechat-text {
  display: block;
  font-size: 18px;
  font-weight: bold;
  color: #333;
  margin-bottom: 10px;
}

.wechat-desc {
  display: block;
  font-size: 14px;
  color: #999;
  line-height: 1.5;
}

.wechat-login-btn {
  width: 100%;
  height: 45px;
  background-color: #07c160;
  color: white;
  border: none;
  border-radius: 8px;
  font-size: 16px;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-icon-placeholder {
  width: 20px;
  height: 20px;
  background: white;
  border-radius: 50%;
  margin-right: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  color: #07c160;
  font-weight: bold;
}

.agreement {
  text-align: center;
  margin: 25px 0 20px 0;
  color: rgba(255, 255, 255, 0.8);
  font-size: 12px;
  line-height: 1.6;
}

.agreement .link {
  color: #fff;
  margin: 0 5px;
}