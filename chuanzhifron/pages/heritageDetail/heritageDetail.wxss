.container {
  padding: 16rpx 24rpx 40rpx;
  background-color: #f7f8fa;
  min-height: 100vh;
  box-sizing: border-box;
}

.header {
  margin-bottom: 24rpx;
}

.title-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #222;
  line-height: 1.4;
  flex: 1;
}

.favorite-btn {
  background: none;
  border: none;
  padding: 0;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
  color: #999;
}

.favorite-btn:active {
  color: #c41e3a;
}

.iconfont {
  font-size: 40rpx;
}

.icon-heart::before {
  content: '♡';
}

.icon-heart-fill::before {
  content: '♥';
  color: #c41e3a;
}

.meta {
  margin-top: 12rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.tag {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 999rpx;
}

.level-tag {
  background-color: #ffece3;
  color: #ff6a00;
}

.region-tag {
  background-color: #e6f4ff;
  color: #1677ff;
}

.category-tag {
  background-color: #f4f0ff;
  color: #722ed1;
}

.cover-wrapper {
  width: 100%;
  height: 340rpx;
  border-radius: 24rpx;
  overflow: hidden;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
}

.cover-image {
  width: 100%;
  height: 100%;
}

.section {
  margin-bottom: 32rpx;
  padding: 24rpx 22rpx;
  background-color: #fff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.04);
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #222;
  margin-bottom: 16rpx;
}

.section-content {
  font-size: 26rpx;
  color: #555;
  line-height: 1.8;
}

.paragraph {
  display: block;
  margin-bottom: 16rpx;
  text-indent: 2em;
}

.paragraph:last-child {
  margin-bottom: 0;
}

