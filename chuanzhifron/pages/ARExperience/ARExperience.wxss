/* ARExperience.wxss */
.container {
  min-height: 100vh;
  background-color: #f8f5f2;
  padding-bottom: 160rpx;
}

/* È°µÈù¢Ê†áÈ¢ò */
.page-header {
  background-color: white;
  padding: 40rpx 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.page-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
}

/* AR‰ΩìÈ™å‰ªãÁªç */
.intro-section {
  background-color: white;
  margin: 20rpx 30rpx;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.05);
}

.intro-content {
  display: flex;
  flex-direction: column;
}

.intro-text {
  margin-bottom: 30rpx;
}

.intro-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.intro-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  display: block;
  margin-bottom: 20rpx;
}

.intro-features {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  display: block;
  margin-bottom: 20rpx;
}

.feature-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
}

.feature-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
  width: 40rpx;
  text-align: center;
}

.feature-text {
  font-size: 26rpx;
  color: #666;
  flex: 1;
}

.intro-image {
  width: 100%;
  height: 300rpx;
  border-radius: 16rpx;
}

/* Âå∫ÂùóÊ†∑Âºè */
.section {
  margin-bottom: 40rpx;
  padding: 0 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  position: relative;
  padding-bottom: 12rpx;
}

.section-title::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 60rpx;
  height: 4rpx;
  background-color: #c41e3a;
}

.more-link {
  font-size: 28rpx;
  color: #c41e3a;
}

/* ARÈ°πÁõÆÁΩëÊ†º */
.ar-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.ar-card {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.05);
}

.ar-image-container {
  position: relative;
}

.ar-image {
  width: 100%;
  height: 240rpx;
}

.hot-badge {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  background-color: #c41e3a;
  color: white;
  font-size: 20rpx;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
}

.ar-content {
  padding: 24rpx;
}

.ar-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
}

.ar-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.ar-button {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}

.ar-button text {
  font-size: 28rpx;
}

/* AR‰ΩìÈ™åÊåáÂçó */
.guide-section {
  background-color: white;
  margin: 20rpx 30rpx;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.05);
}

.guide-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 30rpx;
}

.guide-item {
  text-align: center;
}

.guide-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: rgba(196, 30, 58, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 20rpx;
}

.guide-icon .iconfont {
  font-size: 40rpx;
  color: #c41e3a;
}

.guide-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
}

.guide-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

/* ‰ΩìÈ™åËÆ∞ÂΩï */
.record-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.record-item {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
}

.record-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 24rpx;
}

.record-content {
  flex: 1;
}

.record-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.record-time {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 8rpx;
}

.record-duration {
  font-size: 24rpx;
  color: #666;
  display: block;
}

.record-button {
  padding: 16rpx 24rpx;
  font-size: 24rpx;
}

/* ÂõæÊ†áÂ≠ó‰Ωì */
.iconfont {
  font-size: 32rpx;
}

.icon-cube::before {
  content: 'üì¶';
}

.icon-mobile::before {
  content: 'üì±';
}

.icon-camera::before {
  content: 'üì∑';
}

.icon-hand::before {
  content: 'üëÜ';
}

/* ÂìçÂ∫îÂºèË∞ÉÊï¥ */
@media (max-width: 750rpx) {
  .ar-grid {
    grid-template-columns: 1fr;
  }
  
  .guide-grid {
    grid-template-columns: 1fr;
    gap: 40rpx;
  }
  
  .intro-content {
    flex-direction: column;
  }
  
  .record-item {
    flex-direction: column;
    align-items: flex-start;
  }
  
  .record-image {
    width: 100%;
    height: 200rpx;
    margin-right: 0;
    margin-bottom: 20rpx;
  }
  
  .record-button {
    width: 100%;
    margin-top: 20rpx;
  }
}