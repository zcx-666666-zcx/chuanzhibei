.news-card {
  margin-bottom: 20rpx;
  overflow: hidden;
}

.news-image {
  width: 100%;
  height: 300rpx;
  display: block;
}

.news-content {
  padding: 20rpx;
}

.news-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.news-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.news-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.news-date {
  font-size: 24rpx;
  color: #999;
}

.fav-icon {
  font-size: 36rpx;
}