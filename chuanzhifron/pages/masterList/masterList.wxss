/* pages/masterList/masterList.wxss */
.container {
  min-height: 100vh;
  background-color: #f8f5f2;
  padding-bottom: 160rpx;
}

/* 页面标题 */
.page-header {
  background-color: white;
  padding: 40rpx 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.page-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
}

/* 分类筛选 */
.filter-section {
  background-color: white;
  padding: 30rpx 0;
  margin-bottom: 20rpx;
}

.filter-scroll {
  white-space: nowrap;
}

.filter-list {
  display: flex;
  padding: 0 30rpx;
}

.filter-item {
  display: inline-block;
  padding: 16rpx 32rpx;
  margin-right: 20rpx;
  border-radius: 32rpx;
  font-size: 28rpx;
  background-color: #f0e6d2;
  color: #8c6e44;
  white-space: nowrap;
  transition: all 0.3s ease;
}

.filter-item.active {
  background-color: #c41e3a;
  color: white;
}

.filter-item:last-child {
  margin-right: 0;
}

.loading {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 传承人网格 */
.master-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 0 30rpx;
}

.master-card {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.05);
}

.master-image {
  width: 100%;
  height: 240rpx;
}

.master-content {
  padding: 24rpx;
}

.master-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.master-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  margin-right: 16rpx;
}

.master-header-right {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.master-level {
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  background-color: rgba(196, 30, 58, 0.1);
  color: #c41e3a;
  white-space: nowrap;
}

.master-skill {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 12rpx;
}

.master-desc {
  font-size: 22rpx;
  color: #999;
  line-height: 1.5;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.master-footer {
  padding: 0 24rpx 24rpx;
}

.favorite-btn {
  background: none;
  border: none;
  padding: 0;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
}

.favorite-btn:active {
  color: #c41e3a;
}

.btn-secondary {
  width: 100%;
  padding: 16rpx;
  background-color: #c41e3a;
  color: white;
  border: none;
  border-radius: 8rpx;
  font-size: 26rpx;
}

.book-button {
  margin-top: 0;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 200rpx 0;
  color: #999;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 图标字体 */
.iconfont {
  font-size: 32rpx;
}

.icon-heart::before {
  content: '♡';
}

.icon-heart-fill::before {
  content: '♥';
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .master-grid {
    grid-template-columns: 1fr;
  }
  
  .filter-item {
    font-size: 26rpx;
    padding: 14rpx 28rpx;
  }
}

