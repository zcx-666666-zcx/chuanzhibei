/* PersonalCenter.wxss */
.container {
  min-height: 100vh;
  background-color: #f8f5f2;
  padding-bottom: 160rpx;
}

/* 用户信息卡片 */
.user-card {
  background: white;
  margin: 20rpx 30rpx;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.05);
}

.user-header {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 24rpx;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.user-title {
  font-size: 28rpx;
  color: #666;
  display: block;
}

.settings-btn {
  background: none;
  border: none;
  padding: 0;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
}

.settings-btn:active {
  color: #c41e3a;
}

.user-stats {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  text-align: center;
}

.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  display: block;
}

/* 区块样式 */
.section {
  margin-bottom: 40rpx;
  padding: 0 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  position: relative;
  padding-bottom: 12rpx;
}

.section-title::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 60rpx;
  height: 4rpx;
  background-color: #c41e3a;
}

.more-link {
  font-size: 28rpx;
  color: #c41e3a;
}

/* 收藏列表 */
.collection-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.collection-item {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
}

.collection-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 24rpx;
}

.collection-content {
  flex: 1;
}

.collection-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.collection-level {
  font-size: 22rpx;
  color: #999;
  display: block;
  margin-bottom: 8rpx;
}

.collection-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.remove-btn {
  background: none;
  border: none;
  padding: 0;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
}

.remove-btn:active {
  color: #c41e3a;
}

/* 创作网格 */
.creation-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.creation-item {
  position: relative;
  border-radius: 16rpx;
  overflow: hidden;
  aspect-ratio: 1;
}

.creation-image {
  width: 100%;
  height: 100%;
}

.creation-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.7), transparent);
  padding: 20rpx;
}

.creation-title {
  color: white;
  font-size: 24rpx;
  font-weight: 500;
}

.add-creation {
  background: #f5f5f5;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  aspect-ratio: 1;
  border: 2rpx dashed #ddd;
}

.add-icon {
  font-size: 48rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.add-text {
  font-size: 24rpx;
  color: #999;
}

/* 预约列表 */
.booking-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.booking-item {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
}

.master-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 24rpx;
}

.booking-content {
  flex: 1;
}

.booking-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.booking-time {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 8rpx;
}

.booking-status {
  font-size: 22rpx;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  display: inline-block;
}

.booking-status.confirmed {
  background-color: rgba(76, 175, 80, 0.1);
  color: #4caf50;
}

.booking-status.pending {
  background-color: rgba(255, 193, 7, 0.1);
  color: #ffc107;
}

.cancel-btn {
  padding: 16rpx 24rpx;
  font-size: 24rpx;
  white-space: nowrap;
}

/* 功能菜单 */
.menu-section {
  background: white;
  margin: 20rpx 30rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.05);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx 40rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 24rpx;
  width: 40rpx;
  text-align: center;
}

.menu-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.menu-arrow {
  font-size: 24rpx;
  color: #999;
}

/* 图标字体 */
.iconfont {
  font-size: 32rpx;
}

.icon-settings::before {
  content: '⚙️';
}

.icon-close::before {
  content: '✕';
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .creation-grid {
    grid-template-columns: 1fr;
  }
  
  .collection-item {
    flex-direction: column;
    align-items: flex-start;
  }
  
  .collection-image {
    width: 100%;
    height: 200rpx;
    margin-right: 0;
    margin-bottom: 20rpx;
  }
  
  .booking-item {
    flex-direction: column;
    align-items: flex-start;
  }
  
  .master-avatar {
    margin-right: 0;
    margin-bottom: 20rpx;
  }
  
  .cancel-btn {
    width: 100%;
    margin-top: 20rpx;
  }
}
