.container {
  min-height: 100vh;
  background-color: #f8f5f2;
  padding-bottom: 160rpx;
}

/* È°µÈù¢Ê†áÈ¢ò */
.page-header {
  background-color: white;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.header-top {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.page-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.search-btn,
.share-btn {
  background: none;
  border: none;
  padding: 0;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
  color: #666;
}

.search-btn:active,
.share-btn:active {
  color: #c41e3a;
}

/* ÂàÜÁ±ªÁ≠õÈÄâ */
.filter-scroll {
  white-space: nowrap;
}

.filter-list {
  display: flex;
  padding: 10rpx 0;
}

.filter-item {
  display: inline-block;
  padding: 12rpx 28rpx;
  margin-right: 20rpx;
  border-radius: 32rpx;
  font-size: 26rpx;
  background-color: #f0e6d2;
  color: #8c6e44;
  white-space: nowrap;
  transition: all 0.3s ease;
}

.filter-item.active {
  background-color: #c41e3a;
  color: white;
}

.filter-item:last-child {
  margin-right: 0;
}

/* Âå∫ÂùóÊ†∑Âºè */
.section {
  margin-bottom: 40rpx;
  padding: 0 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-header-right {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  position: relative;
  padding-bottom: 12rpx;
}

.section-title::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 60rpx;
  height: 4rpx;
  background-color: #c41e3a;
}

.more-link {
  font-size: 28rpx;
  color: #c41e3a;
}

.section-count {
  font-size: 24rpx;
  color: #999;
}

/* ‰º†Êâø‰∫∫ÁΩëÊ†º */
.master-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.master-card {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
}

.master-image {
  width: 100%;
  height: 300rpx;
}

.master-content {
  padding: 24rpx;
  flex: 1;
}

.master-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 12rpx;
}

.master-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  margin-right: 16rpx;
}

.master-header-right {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.favorite-btn {
  background: none;
  border: none;
  padding: 0;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
}

.favorite-btn:active {
  color: #c41e3a;
}

.master-level {
  font-size: 20rpx;
  background-color: rgba(196, 30, 58, 0.1);
  color: #c41e3a;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  white-space: nowrap;
}

.master-skill {
  font-size: 24rpx;
  color: #3a6ea5;
  display: block;
  margin-bottom: 12rpx;
}

.master-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.master-footer {
  padding: 0 24rpx 24rpx;
  display: flex;
  gap: 16rpx;
}

.book-button {
  flex: 1;
  padding: 16rpx 0;
  font-size: 28rpx;
}

.share-master-btn {
  padding: 16rpx 24rpx;
  font-size: 26rpx;
  white-space: nowrap;
}

.btn-outline {
  background: transparent;
  color: #c41e3a;
  border: 2rpx solid #c41e3a;
  border-radius: 8rpx;
  padding: 14rpx 24rpx;
  font-size: 26rpx;
}

.btn-outline:active {
  background-color: rgba(196, 30, 58, 0.1);
}

/* ÊäÄËâ∫Â±ïÁ§∫ÁΩëÊ†º */
.skill-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.skill-card {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.05);
}

.video-container {
  position: relative;
}

.video-thumbnail {
  width: 100%;
  height: 240rpx;
}

.play-overlay {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80rpx;
  height: 80rpx;
  background-color: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.play-icon {
  color: white;
  font-size: 32rpx;
  margin-left: 8rpx;
}

.video-duration {
  position: absolute;
  bottom: 16rpx;
  right: 16rpx;
  background-color: rgba(0, 0, 0, 0.6);
  color: white;
  font-size: 20rpx;
  padding: 8rpx 12rpx;
  border-radius: 8rpx;
}

.skill-content {
  padding: 24rpx;
}

.skill-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
}

.skill-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.skill-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.skill-date {
  font-size: 22rpx;
  color: #999;
}

.skill-views {
  font-size: 22rpx;
  color: #999;
}

/* Ê¥ªÂä®ÂàóË°® */
.activity-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.activity-item {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
}

.activity-date {
  width: 80rpx;
  height: 80rpx;
  background-color: rgba(196, 30, 58, 0.1);
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.date-day {
  font-size: 32rpx;
  font-weight: bold;
  color: #c41e3a;
}

.date-month {
  font-size: 20rpx;
  color: #c41e3a;
}

.activity-content {
  flex: 1;
}

.activity-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.activity-time {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 8rpx;
}

.activity-location {
  font-size: 24rpx;
  color: #666;
  display: block;
}

.activity-button {
  padding: 16rpx 24rpx;
  font-size: 24rpx;
  white-space: nowrap;
}

/* Á§æÂå∫Âä®ÊÄÅ */
.community-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.community-item {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.post-content {
  flex: 1;
}

.post-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.user-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.post-time {
  font-size: 24rpx;
  color: #999;
}

.post-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 16rpx;
}

.post-images {
  display: flex;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.post-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
}

.post-footer {
  display: flex;
  gap: 40rpx;
}

.action-btn {
  background: none;
  border: none;
  padding: 0;
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: #999;
  font-size: 24rpx;
}

.action-btn:active {
  color: #c41e3a;
}

/* ÂõæÊ†áÂ≠ó‰Ωì */
.iconfont {
  font-size: 28rpx;
}

.icon-heart::before {
  content: '‚ô°';
}

.icon-heart-fill::before {
  content: '‚ô•';
}

.icon-comment::before {
  content: 'üí¨';
}

.icon-search::before {
  content: 'üîç';
}

.icon-share::before {
  content: 'üì§';
}

/* Âä†ËΩΩÁä∂ÊÄÅ */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 80rpx 0;
  color: #999;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* Á©∫Áä∂ÊÄÅ */
.empty {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 120rpx 0;
  color: #999;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* ÂìçÂ∫îÂºèË∞ÉÊï¥ */
@media (max-width: 750rpx) {
  .master-grid {
    grid-template-columns: 1fr;
  }
  
  .skill-grid {
    grid-template-columns: 1fr;
  }
  
  .activity-item {
    flex-direction: column;
    align-items: flex-start;
  }
  
  .activity-date {
    margin-right: 0;
    margin-bottom: 20rpx;
  }
  
  .activity-button {
    width: 100%;
    margin-top: 20rpx;
  }
  
  .post-images {
    flex-wrap: wrap;
  }
  
  .post-image {
    width: 100rpx;
    height: 100rpx;
  }
}
