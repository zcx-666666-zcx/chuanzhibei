/* pages/newsList/newsList.wxss */
.container {
  min-height: 100vh;
  background-color: #f8f5f2;
  padding: 0 30rpx 40rpx;
}

.page-header {
  padding: 30rpx 0;
  background-color: #fff;
  margin: 0 -30rpx 30rpx -30rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.page-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  position: relative;
  padding-bottom: 16rpx;
}

.page-title::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 80rpx;
  height: 6rpx;
  background-color: #c41e3a;
}

.loading {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

.empty-state {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 新闻列表样式 */
.news-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.news-card {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.05);
}

.news-img {
  width: 100%;
  height: 300rpx;
}

.news-content {
  padding: 24rpx;
}

.news-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.news-desc {
  font-size: 26rpx;
  color: #666;
  display: block;
  margin-bottom: 24rpx;
  line-height: 1.5;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.news-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.news-date {
  font-size: 24rpx;
  color: #999;
}

