.container {
  padding: 24rpx 30rpx 40rpx;
  background: #f7f8fa;
  min-height: 100vh;
  box-sizing: border-box;
}

.header {
  margin-bottom: 24rpx;
}

.title {
  font-size: 34rpx;
  font-weight: 600;
  color: #222;
  display: block;
  margin-bottom: 8rpx;
}

.desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.card {
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #222;
  display: block;
  margin-bottom: 12rpx;
}

.card-text {
  font-size: 26rpx;
  color: #555;
  line-height: 1.6;
  display: block;
  margin-bottom: 8rpx;
}

.marker-img {
  width: 100%;
  height: 360rpx;
  border-radius: 16rpx;
  margin-top: 12rpx;
  object-fit: cover;
}

.video {
  width: 100%;
  height: 380rpx;
  border-radius: 16rpx;
  background: #000;
  margin-top: 20rpx;
}

.placeholder {
  width: 100%;
  height: 180rpx;
  border-radius: 16rpx;
  background: #f0f0f0;
  color: #999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.footer {
  position: sticky;
  bottom: 0;
  padding: 10rpx 0 0;
}

.btn-primary {
  width: 100%;
  background: linear-gradient(135deg, #c41e3a, #e95a5a);
  color: #fff;
  border: none;
  border-radius: 16rpx;
  padding: 20rpx 0;
  font-size: 30rpx;
}

.ar-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.ar-result {
  width: 90%;
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  text-align: center;
}

.result-text {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}